    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FuryRoad"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>

            <!--#region Objects Width x Height-->
            <system:Double x:Key="RoadMarkWidth">20</system:Double>
            <system:Double x:Key="RoadMarkHeight">60</system:Double>

            <system:Double x:Key="TreeWidth">165</system:Double>
            <system:Double x:Key="TreeHeight">165</system:Double>

            <system:Double x:Key="LampPostWidth">85</system:Double>
            <system:Double x:Key="LampPostHeight">115</system:Double>

            <system:Double x:Key="RoadSideWidth">30</system:Double>
            <system:Double x:Key="RoadSideHeight">228</system:Double>

            <system:Double x:Key="CarWidth">50</system:Double>
            <system:Double x:Key="CarHeight">95</system:Double>

            <system:Double x:Key="TruckWidth">65</system:Double>
            <system:Double x:Key="TruckHeight">220</system:Double>

            <system:Double x:Key="HighWayDividerWidth">25</system:Double>
            <!--#endregion-->

            <!--#region Rotation Angles-->
            <system:Double x:Key="GameViewRotationAngle">-30</system:Double>
            <system:Double x:Key="FoliageViewRotationAngle">30</system:Double>
            <!--#endregion-->

            <!--#region Colors-->
            <SolidColorBrush x:Key="RoadBackgroundColor" Color="#365985" />
            <SolidColorBrush x:Key="GrassColor" Color="#369f1d" />
            <SolidColorBrush x:Key="GrassStripeColor" Color="#1b951b" />
            <!--#endregion-->

        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="RootGrid">

        <!--#region Soil View-->
        <Canvas
            x:Name="SoilView"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{StaticResource GrassColor}"
            RenderTransformOrigin="0.5,0.5">

            <Canvas.RenderTransform>
                <RotateTransform Angle="{StaticResource GameViewRotationAngle}" CenterX="0.5" CenterY="0.5" />
            </Canvas.RenderTransform>

        </Canvas>
        <!--#endregion-->

        <!--#region Game View-->
        <Canvas
            x:Name="GameView"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{StaticResource RoadBackgroundColor}"
            RenderTransformOrigin="0.5,0.5">

            <Canvas.RenderTransform>
                <RotateTransform Angle="{StaticResource GameViewRotationAngle}" CenterX="0.5" CenterY="0.5" />
            </Canvas.RenderTransform>

            <!--#region Highway Borders-->
            <!--  High way left side border  -->
            <Border
                x:Name="highWayLeftSide"
                Canvas.Left="0"
                Width="{StaticResource RoadSideWidth}"
                Height="{x:Bind Path=GameView.Height, Mode=OneWay}"
                Background="#acb8c4"
                BorderBrush="#0e123f"
                BorderThickness="4,0" />

            <!--  High way middle border  -->
            <Border
                x:Name="highWayDivider"
                Canvas.Left="{x:Bind Path=((GameView.Width/2)-(25/2)), Mode=OneWay}"
                Width="{StaticResource HighWayDividerWidth}"
                Height="{x:Bind Path=GameView.Height, Mode=OneWay}"
                Background="#d9a93a"
                BorderBrush="DarkGoldenrod"
                BorderThickness="4,0" />

            <!--  High way right side border  -->
            <Border
                x:Name="highWayRightSide"
                Canvas.Left="{x:Bind Path=GameView.Width-30, Mode=OneWay}"
                Width="{StaticResource RoadSideWidth}"
                Height="{x:Bind Path=GameView.Height, Mode=OneWay}"
                Background="#acb8c4"
                BorderBrush="#0e123f"
                BorderThickness="4,0" />
            <!--#endregion-->

            <!--#region Road Marks: Left-->
