                Canvas.Left="{x:Bind Path=0+15, Mode=OneWay}"
                Canvas.Top="{x:Bind Path=580*-1}"
                Width="{StaticResource LampPostWidth}"
                Height="{StaticResource LampPostHeight}"
                RenderTransformOrigin="0.5,0.5"
                Tag="lamppost-left">
                <GameObject.RenderTransform>
                    <RotateTransform Angle="{StaticResource FoliageViewRotationAngle}" CenterX="0.5" CenterY="0.5" />
