<Page
    x:Class="FuryRoad.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FuryRoad"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <system:Double x:Key="RoadMarkWidth">20</system:Double>
            <system:Double x:Key="RoadMarkHeight">60</system:Double>

            <system:Double x:Key="RoadSideWidth">30</system:Double>
            <system:Double x:Key="RoadSideHeight">228</system:Double>

            <system:Double x:Key="CarWidth">50</system:Double>
            <system:Double x:Key="CarHeight">95</system:Double>

            <system:Double x:Key="TruckWidth">65</system:Double>
            <system:Double x:Key="TruckHeight">220</system:Double>

            <system:Double x:Key="HighWayDividerWidth">25</system:Double>

            <SolidColorBrush x:Key="RoadBackgroundColor" Color="#365985" />
            <SolidColorBrush x:Key="GrassColor" Color="#369f1d" />
            <SolidColorBrush x:Key="GrassStripeColor" Color="#1b951b" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="RootGrid" Background="{StaticResource GrassColor}">

        <Canvas x:Name="BackgroundView" RenderTransformOrigin="0.5,0.5">

            <Canvas.RenderTransform>
                <RotateTransform Angle="-45" CenterX="0.5" CenterY="0.5" />
            </Canvas.RenderTransform>

            <!--  Left side  -->

            <Border
                Canvas.Left="{x:Bind Path=-5*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height*2, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />


            <Border
                Canvas.Left="{x:Bind Path=-4*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=-3*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=-2*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=-1*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=0*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=1*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=2*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=3*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=4*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=5*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=6*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=7*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=8*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=9*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=10*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=11*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=12*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=13*60, Mode=OneWay}"
                Canvas.Top="0"
                Width="30"
                Height="{x:Bind Path=BackgroundView.Height, Mode=OneWay}"
                Background="{StaticResource GrassStripeColor}" />

            <Border
                Canvas.Left="{x:Bind Path=14*60, Mode=OneWay}"
                Canvas.Top="0"
