<Page
    x:Class="FuryRoad.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FuryRoad"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <system:Double x:Key="RoadMarkWidth">20</system:Double>
            <system:Double x:Key="RoadMarkHeight">60</system:Double>
            <system:Double x:Key="CarWidth">50</system:Double>
            <system:Double x:Key="CarHeight">95</system:Double>
            <system:Double x:Key="TruckWidth">65</system:Double>
            <system:Double x:Key="TruckHeight">220</system:Double>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

        <Canvas
            x:Name="myCanvas"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch">

            <!--  Road marks  -->
            <RoadMark
                Canvas.Left="{x:Bind Path=myCanvas.Width/2, Mode=OneWay}"
                Canvas.Top="-152"
                Width="{StaticResource RoadMarkWidth}"
                Height="{StaticResource RoadMarkHeight}" />
            <RoadMark
                Canvas.Left="{x:Bind Path=myCanvas.Width/2, Mode=OneWay}"
                Canvas.Top="10"
                Width="{StaticResource RoadMarkWidth}"
                Height="{StaticResource RoadMarkHeight}" />
            <RoadMark
                Canvas.Left="{x:Bind Path=myCanvas.Width/2, Mode=OneWay}"
                Canvas.Top="176"
                Width="{StaticResource RoadMarkWidth}"
                Height="{StaticResource RoadMarkHeight}" />
            <RoadMark
                Canvas.Left="{x:Bind Path=myCanvas.Width/2, Mode=OneWay}"
                Canvas.Top="348"
                Width="{StaticResource RoadMarkWidth}"
                Height="{StaticResource RoadMarkHeight}" />
            <RoadMark
                Canvas.Left="{x:Bind Path=myCanvas.Width/2, Mode=OneWay}"
                Canvas.Top="520"
                Width="{StaticResource RoadMarkWidth}"
                Height="{StaticResource RoadMarkHeight}" />
            <RoadMark
                Canvas.Left="{x:Bind Path=myCanvas.Width/2, Mode=OneWay}"
                Canvas.Top="692"
                Width="{StaticResource RoadMarkWidth}"
                Height="{StaticResource RoadMarkHeight}" />
            <RoadMark
                Canvas.Left="{x:Bind Path=myCanvas.Width/2, Mode=OneWay}"
                Canvas.Top="864"
                Width="{StaticResource RoadMarkWidth}"
                Height="{StaticResource RoadMarkHeight}" />

            <!--  Cars  -->
            <Car
                Canvas.Left="{x:Bind Path=myCanvas.Width/1.5}"
                Canvas.Top="{x:Bind Path=myCanvas.Height-150}"
                Width="{StaticResource CarWidth}"
                Height="{StaticResource CarHeight}" />

            <Car
                Canvas.Left="{x:Bind Path=myCanvas.Width/2.5}"
                Canvas.Top="{x:Bind Path=myCanvas.Height-250}"
                Width="{StaticResource CarWidth}"
                Height="{StaticResource CarHeight}" />

            <Car
                Canvas.Left="{x:Bind Path=myCanvas.Width/3.5}"
                Canvas.Top="{x:Bind Path=myCanvas.Height-10}"
                Width="{StaticResource CarWidth}"
                Height="{StaticResource CarHeight}" />

            <Car
                Canvas.Left="{x:Bind Path=myCanvas.Width/4.5}"
                Canvas.Top="{x:Bind Path=myCanvas.Height-50}"
                Width="{StaticResource CarWidth}"
                Height="{StaticResource CarHeight}" />

            <Car
                Canvas.Left="{x:Bind Path=myCanvas.Width/5.5}"
                Canvas.Top="{x:Bind Path=myCanvas.Height-100}"
                Width="{StaticResource CarWidth}"
                Height="{StaticResource CarHeight}" />

            <Car
                Canvas.Left="{x:Bind Path=myCanvas.Width/6.5}"
                Canvas.Top="{x:Bind Path=myCanvas.Height-150}"
                Width="{StaticResource CarWidth}"
                Height="{StaticResource CarHeight}" />

            <!--  Trucks  -->
            <Truck
                Canvas.Left="{x:Bind Path=myCanvas.Width/7.5}"
                Canvas.Top="{x:Bind Path=myCanvas.Height-150}"
                Width="{StaticResource TruckWidth}"
                Height="{StaticResource TruckHeight}" />

            <Truck
                Canvas.Left="{x:Bind Path=myCanvas.Width/7.5}"
                Canvas.Top="{x:Bind Path=myCanvas.Height-150}"
                Width="{StaticResource TruckWidth}"
                Height="{StaticResource TruckHeight}" />

            <Truck
                Canvas.Left="{x:Bind Path=myCanvas.Width/7.5}"
                Canvas.Top="{x:Bind Path=myCanvas.Height-150}"
                Width="{StaticResource TruckWidth}"
                Height="{StaticResource TruckHeight}" />

            <!--  Player  -->
            <GameObject
                x:Name="player"
                Canvas.Left="222"
                Canvas.Top="{x:Bind Path=myCanvas.Height-250, Mode=OneWay}"
                Width="{StaticResource CarWidth}"
                Height="{StaticResource CarHeight}" />
        </Canvas>

        <TextBlock
            Name="scoreText"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="18"
            FontWeight="Bold"
            Text="Survived: 00 Seconds" />

        <Border
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            KeyDown="OnKeyDown"
            KeyUp="OnKeyUP"
            PointerPressed="myCanvas_PointerPressed" />
    </Grid>
</Page>
